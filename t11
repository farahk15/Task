<!DOCTYPE html>
<html>
  <body>
 <button id="ipbutton" onclick="getIp()">Get ip</button>
      <script>
        function getIp(){
          fetch('https://api.ipify.ordg?format=json')
          .then(response=>response.json())
          .then(data => { document.getElementById("ipbutton").innerText = data.ip;
          })
          .catch(error=>{
           alert("error",error);
          });
        }
       
      </script>
  </body>
</html>
